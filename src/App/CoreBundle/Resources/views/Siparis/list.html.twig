{% extends 'AppCoreBundle::layout.html.twig' %}
{% block content %}
    <div class="container">
        <div class="row" style="margin-top: 40px;">
            <div class="col-md-6">
                <table class="table table-hover">
                    <tbody>
                    <tr>
                        <td><a href="javascript: history.go(-1)" class="btn btn-info">Geri</a></td>
                    </tr>
                    <tr>
                        <td><strong>Müşteri</strong></td>
                        <td>{{ item.user.isim }}</td>
                    </tr>
                    <tr>
                        <td><strong>Tarih</strong></td>
                        <td>{{ item.date | date('d/m/Y') }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-sm-12">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th>Koli No</th>
                        <th>Ürün Cinsi</th>
                        <th>Adet</th>
                        <th>Firma</th>
                        <th>Faturasız Adet</th>
                        <th>Gönderi Yönetimi</th>
                        <th>Toplam</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for urun in item.urunler %}
                        <tr>
                            <td>{{ urun.kutuno }}</td>
                            <td>{{ urun.uruncinsi }}</td>
                            <td>{{ urun.adet }}</td>
                            <td>{{ urun.firma }}</td>
                            <td>{{ urun.fsizadet }}</td>
                            <td>{% if urun.Gonderiyontemi == 0 %}
								Uçak
							{% elseif urun.Gonderiyontemi == 1 %}
								Gemi Konteyner
							{% else %}
								Gemi Parsiyel
							{% endif %}</td>
                            <td>{{ urun.toplam }}</td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}